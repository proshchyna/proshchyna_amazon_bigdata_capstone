{
  "cloudwatch.emitMetrics": true,
  "kinesis.endpoint": "kinesis.us-east-2.amazonaws.com",
  "firehose.endpoint": "firehose.us-east-2.amazonaws.com",

  "flows": [
    {
      "filePattern": "/tmp/capstone/views/*",
      "deliveryStream": "proshchy_capstone_views_stream",
      "skipHeaderLines": 1,
      "partitionKeyOption": "RANDOM",
      "dataProcessingOptions": [
              {
                      "optionName": "CSVTOJSON",
                      "customFieldNames": ["item_id","date_timestamp","user_agent","ip"]
              }]
    },    {
      "filePattern": "/tmp/capstone/reviews/*",
      "kinesisStream": "proshchy_capstone_reviews_stream",
      "skipHeaderLines": 1,
      "partitionKeyOption": "RANDOM",
      "dataProcessingOptions": [
              {
                      "optionName": "CSVTOJSON",
                      "customFieldNames": ["item_id","date_timestamp","user_agent","ip","review_title","review_text","stars"],
                      "delimiter": "\\t"
              }]
    }
      ]
}